<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2B4744"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="11dp" />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="303dp"
        android:layout_height="419dp"
        android:background="#6B8582"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="28dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="111dp"
        android:layout_height="140dp"
        app:srcCompat="@drawable/images"
        app:layout_constraintLeft_toLeftOf="@id/spinner3"
        app:layout_constraintRight_toRightOf="@id/spinner3"
        app:layout_constraintTop_toBottomOf="@id/textView2"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:fontFamily="serif-monospace"
        android:text="Travel The World"
        android:textAlignment="center"
        android:textColor="#F4EFEF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="12dp"/>

    <EditText
        android:layout_width="290dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@id/spinner3"
        app:layout_constraintLeft_toLeftOf="@id/spinner3"
        android:hint="Username:"
        android:fontFamily="serif-monospace"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="5dp"/>

    <EditText
        android:layout_width="290dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@id/spinner3"
        app:layout_constraintLeft_toLeftOf="@id/spinner3"
        android:hint="Password:"
        android:fontFamily="serif-monospace"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="5dp"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="@id/spinner3"
        app:layout_constraintLeft_toLeftOf="@id/spinner3"
        android:layout_marginTop="270dp"
        android:backgroundTint="#2B4744"
        android:text="Login"
        android:textColor="@color/white"
        android:layout_marginLeft="80dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>